<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity"
    android:background="@drawable/bg1">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:elevation="5dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">


        <ImageView
            android:id="@+id/register_image"
            android:layout_width="@dimen/logo_w_h"
            android:layout_height="@dimen/logo_w_h"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:src="@drawable/puchotech" />


        <TextView
            android:id="@+id/registerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_image"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="REGISTER"
            android:textColor="#152525"
            android:textSize="18sp"
            android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_image"
        android:hint="Email.."
        android:inputType="textEmailAddress"
        android:padding="4dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_alignParentLeft="true"
        android:drawableEnd="@drawable/email"
        android:textColor="@android:color/black"
        android:textColorHint="@color/Accent"
        android:backgroundTint="@color/Accent"

        />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/register_email"
        android:hint="Password.."
        android:inputType="textPassword"
        android:padding="4dp"
        android:drawableEnd="@drawable/password"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/email"
        android:textColor="@android:color/black"
        android:textColorHint="@color/Accent"
        android:backgroundTint="@color/Accent"
        />


            </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password must be 6 digits long!"
        android:textColor="#8B184A"
        android:layout_below="@+id/register_password"
        android:layout_marginTop="4dp"
        android:gravity="end"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="23dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </FrameLayout>



    <TextView
        android:id="@+id/already_have_account_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frame"
        android:text="Already have an account?"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="23dp"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/text_shadow_white"
        android:gravity="end" />


    <Button
        android:id="@+id/register_button"
        android:layout_below="@+id/already_have_account_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:text="Create  Account"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/Accent"
        android:background="@drawable/buttons"
        android:layout_marginTop="25dp"
        />





</RelativeLayout>